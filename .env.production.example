# SupChat Production Environment Configuration
# This file contains environment variables for the SupChat production environment.

# General configuration
NODE_ENV=production
PORT=3000

# JWT configuration
JWT_SECRET=your_production_jwt_secret_key_here  
JWT_EXPIRES_IN=1h  
JWT_REFRESH=your_production_jwt_refresh_secret_here

# MongoDB configuration (production)  
MONGO_HOST=db
MONGO_PORT=27017
MONGO_DB=supchat_production
MONGO_INITDB_ROOT_USERNAME=yourusername
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here
MONGO_AUTH_SOURCE=admin

# Email configuration
GMAIL_USER=support@votre-domaine.com
GMAIL_PASS=your_gmail_app_password

# Frontend URL for email links (PRODUCTION)
FRONTEND_URL=https://votre-domaine.com

# Google OAuth credentials (production)
GOOGLE_CLIENT_ID=your_production_google_client_id_here  
GOOGLE_CLIENT_SECRET=your_production_google_client_secret_here  
GOOGLE_REDIRECT_URI=https://votre-domaine.com/api/auth/google/callback

# Facebook OAuth credentials (production)
FACEBOOK_APP_ID=your_production_facebook_client_id
FACEBOOK_APP_SECRET=your_production_facebook_client_secret
FACEBOOK_REDIRECT_URI=https://votre-domaine.com/api/auth/facebook/callback

# CSRF Secret
CSRF_SECRET=your_production_csrf_secret_here
