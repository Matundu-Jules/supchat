{
  "watch": [
    "src",
    "controllers",
    "models",
    "services",
    "routes",
    "middlewares",
    "validators"
  ],
  "ext": "js,json",
  "ignore": [
    "src/**/*.test.js",
    "tests/",
    "public/",
    "uploads/",
    "node_modules/"
  ],
  "delay": "500",
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true,
  "legacyWatch": true,
  "polling": true
}